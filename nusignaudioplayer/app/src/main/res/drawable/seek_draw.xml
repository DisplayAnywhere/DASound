<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
                android:startColor="#dadcdc"
                android:centerColor="#dadcdc"
                android:centerY="0.75"
                android:endColor="#dadcdc"
                android:angle="270"
        />
    </shape>
</item>

<item android:id="@android:id/secondaryProgress">
    <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="@color/player_color"
                    android:centerColor="@color/player_color"
                    android:centerY="0.75"
                    android:endColor="@color/player_color"
                    android:angle="270"
            />
        </shape>
    </clip>
</item>

<item android:id="@android:id/progress">
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="@color/player_color"
                android:endColor="@color/player_color"
                android:angle="270" 
            />
        </shape>
    </clip>
</item>

</layer-list>